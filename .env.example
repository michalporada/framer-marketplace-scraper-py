# Framer Marketplace URLs
FRAMER_BASE_URL=https://www.framer.com
MARKETPLACE_URL=https://www.framer.com/marketplace
SITEMAP_URL=https://www.framer.com/marketplace/sitemap.xml
MAIN_SITEMAP_URL=https://www.framer.com/sitemap.xml
ROBOTS_URL=https://www.framer.com/robots.txt

# Rate Limiting
# Number of requests per second
RATE_LIMIT=2.0
# Delay between requests in seconds
DELAY_BETWEEN_REQUESTS=0.5
# Maximum number of concurrent requests
MAX_CONCURRENT_REQUESTS=10

# HTTP Settings
# Request timeout in seconds
TIMEOUT=30
# Maximum number of retries for failed requests
MAX_RETRIES=3

# Logging
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Log format: json or text
LOG_FORMAT=json
# Log file name (saved in logs/ directory)
LOG_FILE=scraper.log

# Output Settings
# Output format: json, csv, both
OUTPUT_FORMAT=json
# Data directory for storing scraped data
DATA_DIR=data

# Database (optional)
# PostgreSQL connection string (leave empty if not using database)
# Example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=

# Checkpoint & Resume
# Enable checkpoint system for resuming scrapes
CHECKPOINT_ENABLED=true
# Checkpoint file path
CHECKPOINT_FILE=data/checkpoint.json

# GitHub Actions
# Set to true when running in GitHub Actions
GITHUB_ACTIONS=false

# Scraping options - which types to scrape
# Set to true/false to enable/disable scraping for each product type
SCRAPE_TEMPLATES=true
SCRAPE_COMPONENTS=true
SCRAPE_VECTORS=true
SCRAPE_PLUGINS=true
# Optional scraping (default: false)
SCRAPE_CATEGORIES=false
SCRAPE_PROFILES=false
